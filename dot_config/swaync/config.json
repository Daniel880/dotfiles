{
    "$schema": "/etc/xdg/swaync/configSchema.json",
    "positionX": "right",
    "positionY": "top",
    "control-center-layer": "top",
    "notification-window-width": 500,
    "control-center-width": 500,
    "fit-to-screen": true,
    "timeout": 10,
    "timeout-low": 5,
    "timeout-critical": 0,
    "widgets": [
        "title",
        "dnd",
        "volume",
        "notifications"
    ],
    "widget-config": {
        "title": {
            "text": "Notifications",
            "clear-all-button": true,
            "button-text": "Clear All"
        },
        "dnd": {
            "text": "Do Not Disturb"
        },
        "volume": {
            "label": "Volume",
            "show-per-app": false
        },
        "notifications": {
            "vexpand": true
        }
    }
}
