{
    "custom/bluetooth": {
        "format": "<span size='large'></span>",
        "tooltip": "Bluetooth",
        "on-click": "kitty -e bluetui"
    },
    "pulseaudio": {
        "format": "<span size='x-large'>{icon}</span> {volume}%",
        "format-bluetooth": "{volume}% <span size='x-large'>{icon}</span>",
        "format-bluetooth-muted": "<span size='x-large'></span> <span size='x-large'>{icon}</span>",
        "format-muted": "<span size='x-large'></span>",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": [
                "",
                "",
                ""
            ]
        },
        "scroll-step": 5,
        "on-click-right": "pavucontrol",
        "on-click": "amixer set Master toggle"
    },
    "pulseaudio#mic": {
        "format": "{format_source}",
        "format-source": "<span size='x-large'></span> {volume}%",
        "format-source-muted": "<span size='x-large'></span>",
        "on-scroll-up": "amixer set Capture 5%+",
        "on-scroll-down": "amixer set Capture 5%-",
        "on-click-right": "pavucontrol",
        "on-click": "amixer set Capture toggle"
    },
    "group/media": {
        "orientation": "horizontal",
        "modules": [
            "custom/bluetooth",
            "pulseaudio",
            "pulseaudio#mic"
        ]
    }
}
